# Using Debian as a base
FROM debian:stable-slim
RUN apt-get update && apt-get install -y rsync locales curl vim unzip c3270 netbase \
&& rm -rf /var/lib/apt/lists/* \
&& localedef -i en_US -c -f UTF-8 -A /usr/share/locale/locale.alias en_US.UTF-8 \
&& mkdir -p /app/mvs \
&& mkdir -p /app/mvs/conf \
&& mkdir -p /app/mvs/log \
&& mkdir -p /app/mvs/doc
ENV LANG en_US.utf8

# Setup MVS
WORKDIR /app/mvs
EXPOSE 3270 8080 3221 3223 3505 3506 8888
COPY tn3270 \
	herc4x.zip \
	vm370ce.dosvs \	
	zel3270 \
	zellij \
	/app/mvs/
RUN curl -k -O http://www.vm370.org/sites/default/files/2022-07/VM370CE.V1.R1.2.zip \
&& unzip VM370CE.V1.R1.2.zip -d /app \
&& rm VM370CE.V1.R1.2.zip \
&& mkdir /app/mvs/backup \
&& mv /app/VM370CE.V1.R1.2/* -t /app/mvs/backup \
&& cp -r /app/mvs/backup/* /app/mvs \
&& rm /app/mvs/vm370ce.conf \
&& cp /app/mvs/vm370ce.dosvs /app/mvs/conf/vm370ce.conf \
&& cp *.txt /app/mvs/doc \
&& cp *.pdf /app/mvs/doc \
&& unzip herc4x.zip -d /app/hercules/ \
&& /app/hercules/herc4x/hyperion-init-bash.sh \
&& rm herc4x.zip \
&& chmod -R +x /app/mvs/*

COPY vm3703270.kdl \
	herclogo.txt \
	vm370ce.sh \
	/app/mvs/

#Get DOS/VS
RUN curl -k -O http://www.vm370.org/sites/default/files/2022-07/DOSVS_5Pack_V1.0-full.zip \
&& unzip DOSVS_5Pack_V1.0-full.zip -d /app/mvs/backup \
&& rm DOSVS_5Pack_V1.0-full.zip \
&& mv /app/mvs/backup/DOSVS_5Pack_V1.0-full/* -t /app/mvs/backup/dosvs \
&& cp -r /app/mvs/backup/dosvs/* /app/mvs/dosvs
ENV PATH="/app/hercules/herc4x/bin:/app/mvs:$PATH"
ENTRYPOINT ["/bin/bash","./vm370ce.sh"]
